      ],
      "activities": "lead generation activities",
      "tool_usage": "LG tool usage",
      "deliverables": "LG deliverables"
    }
  },
  "templates": {
    "section_templates": {
      "purpose": {
        "template": "## Purpose\nThis prompt is specifically designed for the **{department_name} Department** to process call transcriptions and generate daily activity reports. It combines the comprehensive call organization framework with {department_name}-specific context, employee directory, and daily report automation.",
        "variables": ["department_name"]
      },
      "department_overview": {
        "template": "### Department Overview\n**Mission:** {mission}\n**Team Size:** {team_size} employees\n**Key Responsibilities:**\n{responsibilities_list}",
        "variables": ["mission", "team_size", "responsibilities_list"]
      },
      "employee_entry": {
        "template": "**{employee_name}** (ID: {employee_id}) - {profession} | {location} | @{telegram} | {email} | Status: {status}",
        "variables": ["employee_name", "employee_id", "profession", "location", "telegram", "email", "status"]
      },
      "project_entry": {
        "template": "- **{project_name}** - {project_description}",
        "variables": ["project_name", "project_description"]
      },
      "tool_entry": {
        "template": "- **{tool_name}** - {tool_description} - {tool_url}",
        "variables": ["tool_name", "tool_description", "tool_url"]
      }
    }
  },
  "generation_rules": {
    "prompt_construction": {
      "step_1": "Load base templates and department configuration",
      "step_2": "Fetch department-specific data from sources",
      "step_3": "Substitute variables in templates",
      "step_4": "Validate section completeness",
      "step_5": "Assemble sections in correct order",
      "step_6": "Validate final prompt structure",
      "step_7": "Generate markdown file"
    },
    "validation_checks": [
      "All required sections present",
      "All variables substituted",
      "All dependencies resolved",
      "Section order correct",
      "Formatting consistent",
      "Links and references valid"
    ]
  }
