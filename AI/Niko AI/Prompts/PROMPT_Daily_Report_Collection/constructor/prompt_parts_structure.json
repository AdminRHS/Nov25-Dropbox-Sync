      ],
      "activities": "design production activities",
      "tool_usage": "AI design tool usage",
      "deliverables": "creative deliverables"
    },
    "Dev": {
      "department_folder": "Dev Nov25",
      "section_mapping": [19, 9, 3],
      "focus_areas": [
        "Development activities (code, features, bugs)",
